{
  "name": "bpmnlint-runner",
  "version": "0.0.1",
  "description": "A simple runner for bpmnlint in order to better integrate with CI/CD pipelines and have custom reporting beyond the console",
  "license": "MIT",
  "author": "Filipe Pereira",
  "type": "commonjs",
  "main": "bpmnlint-runner.js",
  "bin": {
    "bpmn-linter": "./bpmnlint-runner.js"
  },
  "scripts": {
    "start": "node ./bpmnlint-runner.js",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@bp3global/bpmnlint-plugin-bpmn-rules": "*",
    "bp3-dynamic-rules": "file:bp3-dynamic-rules",
    "bpmn-moddle": "*",
    "bpmnlint": "*",
    "bpmnlint-plugin-bp3-dynamic-rules": "file:bp3-dynamic-rules",
    "bpmnlint-plugin-bp3global-bpmn-rules": "npm:@bp3global/bpmnlint-plugin-bpmn-rules",
    "bpmnlint-plugin-camunda-compat": "*",
    "bpmnlint-utils": "*",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "junit-report-builder": "^5.1.1",
    "tiny-glob": "^0.2.9",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "bpmn",
    "lint",
    "cli",
    "linter",
    "bpmnlint"
  ],
  "files": [
    "bpmnlint-runner.js"
  ],
  "engines": {
    "node": ">=20"
  }
}
