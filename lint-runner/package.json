{
  "name": "lint-runner",
  "version": "0.0.1",
  "description": "A lint runner for both BPMN and DMN files with support for custom reporting formats",
  "license": "MIT",
  "author": "Filipe Pereira",
  "type": "commonjs",
  "main": "index.js",
  "bin": {
    "linter": "./index.js"
  },
  "scripts": {
    "start": "node ./index.js",
    "format": "prettier --write .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@BP3/bpmnlint-plugin-bpmn-rules": "*",
    "bp3-dynamic-rules": "file:bp3-dynamic-rules",
    "bpmn-moddle": "*",
    "bpmnlint": "*",
    "bpmnlint-plugin-bp3-dynamic-rules": "file:bp3-dynamic-rules",
    "bpmnlint-plugin-bp3-bpmn-rules": "npm:@BP3/bpmnlint-plugin-bpmn-rules",
    "bpmnlint-utils": "*",
    "dmn-moddle": "*",
    "dmnlint": "*",
    "dmnlint-plugin-bp3-dynamic-rules": "file:bp3-dynamic-rules",
    "dmnlint-utils": "*",
    "chalk": "*",
    "cli-table3": "*",
    "junit-report-builder": "*",
    "tiny-glob": "*",
    "yargs": "*",
    "zeebe-bpmn-moddle": "*",
    "bpmnlint-plugin-camunda-compat": "npm:bpmnlint-plugin-camunda-compat"
  },
  "devDependencies": {
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-prettier": "*",
    "globals": "*",
    "prettier": "*"
  },
  "keywords": [
    "bpmn",
    "dmn",
    "lint",
    "cli",
    "linter",
    "bpmnlint",
    "dmnlint"
  ],
  "files": [
    "index.js",
    "bp3-dynamic-rules"
  ],
  "engines": {
    "node": ">=20"
  }
}